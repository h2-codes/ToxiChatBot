{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["airbnb-base", "prettier"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "import/extensions": ["never"],
        "no-unused-vars": "warn",
        "indent": ["warn", 4],
        "no-underscore-dangle": ["error", { "allow": ["_id"] }]
    }
}
